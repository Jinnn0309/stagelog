/* 演出列表组件样式 */
.show-list-container {
  width: 100%;
}

/* 列表头部 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.list-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.list-count {
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.show-list-container.dark .list-count {
  background: #1f2937;
}

.count-text {
  font-size: 20rpx;
  color: #9ca3af;
  font-family: monospace;
}

/* 演出项 */
.show-item {
  display: flex;
  gap: 32rpx;
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  border: 1px solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.04);
}

.show-item.dark {
  background: #1f2937;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.show-item:active {
  transform: scale(0.99);
}

/* 海报 */
.show-poster {
  width: 192rpx;
  height: 256rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.1);
}

.poster-image {
  width: 100%;
  height: 100%;
}

.poster-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  background: #f3f4f6;
}

.poster-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.poster-text {
  font-size: 20rpx;
}

/* 信息区域 */
.show-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.show-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.2;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.show-item.dark .show-title {
  color: #ffffff;
}

.show-details {
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.detail-icon {
  font-size: 24rpx;
  color: #f97316;
}

.detail-text {
  font-family: monospace;
  font-weight: 500;
}

.show-item.dark .detail-item {
  color: #9ca3af;
}

/* 底部操作区 */
.show-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.show-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  font-family: monospace;
}

.show-item.dark .show-price {
  color: #ffffff;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #eff6ff;
  color: #3b82f6;
}

.edit-btn:active {
  background: #dbeafe;
}

.delete-btn {
  background: #fef2f2;
  color: #ef4444;
}

.delete-btn:active {
  background: #fee2e2;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 128rpx 48rpx;
  border: 2rpx dashed #e5e7eb;
  border-radius: 48rpx;
}

.show-list-container.dark .empty-state {
  border-color: rgba(255, 255, 255, 0.1);
}

.empty-icon {
  width: 96rpx;
  height: 96rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  opacity: 0.5;
}

.show-list-container.dark .empty-icon {
  background: rgba(255, 255, 255, 0.05);
}

.empty-emoji {
  font-size: 48rpx;
}

.empty-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}