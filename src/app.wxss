/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  background-color: #f9fafb;
  color: #111827;
  line-height: 1.5;
}

/* 暗黑模式 */
@media (prefers-color-scheme: dark) {
  page {
    background-color: #000000;
    color: #ffffff;
  }
}

/* 通用容器 */
.container {
  padding: 0 24rpx;
  min-height: 100vh;
}

/* 玻璃态效果 */
.glass {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.1);
}

@media (prefers-color-scheme: dark) {
  .glass {
    background: rgba(0, 0, 0, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(0, 0, 0, 0.04);
}

@media (prefers-color-scheme: dark) {
  .card {
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx 0 rgba(249, 115, 22, 0.3);
}

.btn-primary:active {
  transform: scale(0.95);
}

.btn-secondary {
  background: rgba(0, 0, 0, 0.05);
  color: #374151;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

@media (prefers-color-scheme: dark) {
  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
}

/* 输入框样式 */
.input {
  background: rgba(0, 0, 0, 0.03);
  border: 1px solid rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #111827;
}

.input:focus {
  border-color: #f97316;
  background: white;
}

@media (prefers-color-scheme: dark) {
  .input {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #ffffff;
  }
  
  .input:focus {
    background: rgba(255, 255, 255, 0.08);
    border-color: #f97316;
  }
}

/* 文本样式 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.text-3xl { font-size: 48rpx; }

.font-bold { font-weight: 700; }
.font-medium { font-weight: 500; }

.text-gray-400 { color: #9ca3af; }
.text-gray-500 { color: #6b7280; }
.text-gray-600 { color: #4b5563; }
.text-gray-800 { color: #1f2937; }
.text-gray-900 { color: #111827; }
.text-white { color: white; }
.text-orange-500 { color: #f97316; }
.text-blue-500 { color: #3b82f6; }

/* 间距 */
.mt-2 { margin-top: 16rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-6 { margin-top: 48rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-6 { margin-bottom: 48rpx; }
.p-4 { padding: 32rpx; }
.p-6 { padding: 48rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }

/* 布局 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

.rounded-2xl { border-radius: 16rpx; }
.rounded-3xl { border-radius: 24rpx; }

.w-full { width: 100%; }
.h-full { height: 100%; }

/* 隐藏滚动条 */
.no-scrollbar::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}