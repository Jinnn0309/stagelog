/* 首页样式 */
.home-container {
  min-height: 100vh;
  background-color: #f9fafb;
  transition: all 0.3s ease;
}

.home-container.dark {
  background-color: #000000;
}

/* 剧场风格横幅 */
.hero-banner {
  position: relative;
  width: 100%;
  height: 680rpx;
  overflow: hidden;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  box-shadow: 0 20rpx 60rpx 0 rgba(0, 0, 0, 0.25);
}

.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  filter: brightness(0.8);
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(249, 115, 22, 0.15) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.banner-content {
  position: absolute;
  bottom: 120rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 2;
}

.banner-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(249, 115, 22, 0.2);
  backdrop-filter: blur(15rpx);
  border-radius: 24rpx;
  border: 1px solid rgba(249, 115, 22, 0.3);
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(249, 115, 22, 0.2);
}

.tag-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #fed7aa;
  letter-spacing: 3rpx;
  text-transform: uppercase;
}

.banner-title {
  display: block;
  font-size: 72rpx;
  font-weight: 800;
  color: white;
  line-height: 1.1;
  letter-spacing: -1rpx;
  margin-bottom: 40rpx;
  text-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.4);
}

.highlight {
  color: transparent;
  background: linear-gradient(45deg, #fed7aa, #f97316, #fb923c);
  -webkit-background-clip: text;
  background-clip: text;
  text-shadow: 0 0 20rpx rgba(249, 115, 22, 0.3);
}

.banner-divider {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.divider-line {
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #f97316, #fed7aa);
  border-radius: 3rpx;
}

.divider-text {
  font-size: 26rpx;
  color: #e5e7eb;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  font-weight: 400;
  font-family: 'PingFang SC', sans-serif;
}

/* 内容区域 */
.content-section {
  margin-top: -80rpx;
  position: relative;
  z-index: 10;
  padding: 0 32rpx;
  min-height: 60vh;
}

.content-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(30rpx);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 32rpx;
  padding-top: 56rpx;
  min-height: 600rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  border-left: 1px solid rgba(255, 255, 255, 0.2);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -20rpx 80rpx 0 rgba(0, 0, 0, 0.15), 
              0 8rpx 32rpx 0 rgba(0, 0, 0, 0.05);
}

.home-container.dark .content-card {
  background: rgba(17, 24, 39, 0.9);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  border-left: 1px solid rgba(255, 255, 255, 0.05);
  border-right: 1px solid rgba(255, 255, 255, 0.05);
}

/* 标签切换 */
.tab-container {
  display: flex;
  justify-content: center;
  margin-bottom: 48rpx;
}

.tab-wrapper {
  background: #f3f4f6;
  padding: 8rpx;
  border-radius: 40rpx;
  display: flex;
  border: 1px solid #e5e7eb;
}

.home-container.dark .tab-wrapper {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.tab-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 48rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #f97316;
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

.home-container.dark .tab-item.active {
  background: #1f2937;
  color: #f97316;
}

.tab-icon {
  font-size: 28rpx;
}

.tab-text {
  font-size: 22rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tab-item:not(.active) {
  color: #9ca3af;
}

.home-container.dark .tab-item:not(.active) {
  color: #6b7280;
}

/* 演出列表 */
.show-list {
  margin-bottom: 96rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.list-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.list-count {
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.home-container.dark .list-count {
  background: #1f2937;
}

.count-text {
  font-size: 20rpx;
  color: #9ca3af;
  font-family: monospace;
}

/* 演出项 */
.show-item {
  display: flex;
  gap: 32rpx;
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  border: 1px solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 4rpx 16rpx 0 rgba(0, 0, 0, 0.04);
}

.show-item.dark {
  background: #1f2937;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.show-item:active {
  transform: scale(0.99);
}

/* 海报 */
.show-poster {
  width: 192rpx;
  height: 256rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.1);
}

.poster-image {
  width: 100%;
  height: 100%;
}

.poster-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  background: #f3f4f6;
}

.poster-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.poster-text {
  font-size: 20rpx;
}

/* 信息区域 */
.show-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.show-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.2;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.show-item.dark .show-title {
  color: #ffffff;
}

.show-details {
  margin-bottom: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.detail-icon {
  font-size: 24rpx;
  color: #f97316;
}

.detail-text {
  font-family: monospace;
  font-weight: 500;
}

.show-item.dark .detail-item {
  color: #9ca3af;
}

/* 底部操作区 */
.show-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.show-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
  font-family: monospace;
}

.show-item.dark .show-price {
  color: #ffffff;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.show-item:hover .action-buttons {
  opacity: 1;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #eff6ff;
  color: #3b82f6;
}

.edit-btn:active {
  background: #dbeafe;
}

.delete-btn {
  background: #fef2f2;
  color: #ef4444;
}

.delete-btn:active {
  background: #fee2e2;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 128rpx 48rpx;
  border: 2rpx dashed #e5e7eb;
  border-radius: 48rpx;
}

.home-container.dark .empty-state {
  border-color: rgba(255, 255, 255, 0.1);
}

.empty-icon {
  width: 96rpx;
  height: 96rpx;
  background: #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  opacity: 0.5;
}

.home-container.dark .empty-icon {
  background: rgba(255, 255, 255, 0.05);
}

.empty-emoji {
  font-size: 48rpx;
}

.empty-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}